---
import "../styles/style.css";
import PlaylisteCard from "../components/PlaylisteCard.astro";
import Button from "../components/Button.astro";
import Pil from "../components/Pil.astro";
import Nav from "../components/Nav.astro";
import OpretPlayliste from "../components/OpretPlayliste.astro";

---

	<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <nav>
        <Nav>
            <img src="/icons/logo.svg" alt="logo" class="logo">
        </Nav>
        <Nav text="Hjem">
            <img src="/icons/home-filled.svg" alt="hjem" class="icons">
        </Nav>
        <Nav text="Søg">
            <img src="/icons/search-icon.svg" alt="søg" class="icons">
        </Nav>
    </nav>
    <header>
        <div class="venstre">
            <Pil><img src="/icons/back-btn.svg" alt="coverbillede" class="icons"></Pil>
            <Pil><img src="/icons/forward-btn.svg" alt="coverbillede" class="icons"></Pil>
        </div>
        <div class="højre">
            <Button variant="primary">Tilmeld dig</Button>   
            <Button variant="secondary">Log på</Button>  
        </div> 
    </header>
    <main>
            <h1 class="overskrifter">Spotify-Playlister</h1>
         <section class="sportify-playliste">
            <PlaylisteCard header="Todays Top Hits" text="Jung Kook is on top of the hottest 50!">
            <img src="https://picsum.photos/id/65/150/150" alt="coverbillede">
            </PlaylisteCard>
            <PlaylisteCard header="RapCaviar" text="New music from Drake, Rod wave and Doja Cat."> 
            <img src="https://picsum.photos/id/68/150/150" alt="coverbillede">
            </PlaylisteCard>
            <PlaylisteCard header="All Out 2010s" text="The biggest song of 2010s.">
            <img src="https://picsum.photos/id/76/150/150" alt="coverbillede">
            </PlaylisteCard>
            <PlaylisteCard header="Rock Classics" text="Rock legends& epic song that contunie to... ">
            <img src="https://picsum.photos/id/240/150/150" alt="coverbillede">
            </PlaylisteCard>
            <PlaylisteCard header="Chill Hits" text="Kick back to the best new and recentchill hits">
            <img src="https://picsum.photos/id/331/150/150" alt="coverbillede">
            </PlaylisteCard>
        </section>

            <h1 class="overskrifter">Fokus</h1>
        <section class="sportify-playliste">
            <PlaylisteCard header="Peaceful Piano" text="Peaceful piano to help you slow down, breath...">
            <img src="https://picsum.photos/id/325/150/150" alt="coverbillede">
            </PlaylisteCard>
            <PlaylisteCard header="Deep Focus" text="Keep calm and focus with ambient and post..."> 
            <img src="https://picsum.photos/id/334/150/150" alt="coverbillede">
            </PlaylisteCard>
            <PlaylisteCard header="Instrumental study" text="Focus with soft study music in the...">
            <img src="https://picsum.photos/id/338/150/150" alt="coverbillede">
            </PlaylisteCard>
            <PlaylisteCard header="Workday Lounge" text="Lounge and chill out music for your workday.">
            <img src="https://picsum.photos/id/349/150/150" alt="coverbillede">
            </PlaylisteCard>
            <PlaylisteCard header="Beats to think to" text="Focus with melodic tehcno and tech house.">
            <img src="https://picsum.photos/id/364/150/150" alt="coverbillede">
            </PlaylisteCard>
        </section>
    </main>
    <aside>
        <section class="bibliotek">
            <Nav><img src="/icons/library-icon-filled.svg" alt="hjem" class="icons"></Nav>
            <Nav text="Dit bibliotek"></Nav>
            <Nav><img src="/icons/create-icon.svg" alt="hjem" class="icons"></Nav>
        </section>
        <section class="udforsk">
            <OpretPlayliste header="Opret din første playliste" text="Det er nemt - vi skal nok hjælpe dig" ></OpretPlayliste>
            <Button variant="third">Opret playliste</Button> 
        </section> 
        <section class="udforsk">
            <OpretPlayliste header="Lad os finde nogle podcast du kan følge" text="Vi holder dig orienteret om nye episoder" ></OpretPlayliste>
            <Button variant="third" class="udforsk_knap">Udforsk podcast</Button> 
        </section>   
    </aside>
</body>
</html>

